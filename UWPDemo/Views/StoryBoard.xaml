<Page
    x:Class="UWPDemo.Views.StoryBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPDemo.Views"
    xmlns:vm="using:UWPDemo.ViewModels"
    xmlns:vmg="using:UWPDemo.VideoManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="300"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <ListView ItemsSource="{Binding VideoManger.StoryBord.StoryBoardClips}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="vmg:VideoClip">
                        <Grid>
                            <Image Source="{x:Bind ImgSource}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
